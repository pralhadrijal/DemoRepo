@model Shopping.Models.UserInfo

@{
    ViewBag.Title = "ChangeUsernameOrPassword";
    Layout = "~/Views/Shared/_Dashboard.cshtml";    
}

<div class="col-md-9 padding-right">
    <div class="panel panel-primary">
        <div class="panel-heading bold">
            <span class="glyphicon glyphicon-user"></span>My Profile
                 <p class="pull-right" style="font-weight: normal;"><a href="/User/ChangePassword/@Session["LoggedUserId"]" style="color:wheat"><span class="glyphicon glyphicon-cog"></span>&nbsp;Change Password</a></p>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <div>
                                @Html.ValidationMessageFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "enter old Password" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div>                                
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "enter new Password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div>                                
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "confirm new Password" })
                            </div>
                        </div>
                        <div>
                            <input class="btn btn-primary btn-block" type="submit" value="Save Changes" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

