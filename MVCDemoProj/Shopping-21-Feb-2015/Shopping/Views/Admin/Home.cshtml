@model IEnumerable<Shopping.Models.PostAd>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}

<div class="col-md-9 padding-right">
    <div class="panel panel-primary">
        <div class="panel-heading bold"><span class=" glyphicon glyphicon-book"></span>&nbsp;Home</div>
        <div class="panel-body" style="background-color: white; height: auto !important; margin: 0px auto; padding: 0px;">
            <div class="col-md-12" style="margin-bottom: 20px; margin-top: 10px;">

                <div class="col-md-3">
                    <div class="col-md-11" style="height: 150px; background-color: #F9F7F7; border-radius: 5px;">
                        <div style="margin-top: 10px; margin-left: 10px; margin-bottom: 10px;">
                            <img src="~/Content/Images/Admin/user.jpg" height="100" width="100" class="img img-circle" />
                        </div>
                        <span style="font-family: Ambleregular; color: red;">Total User</span>&nbsp;<span class="badge">@ViewData["CountUser"]</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-11" style="height: 150px; background-color: #F9F7F7; border-radius: 5px;">
                        <div style="margin-top: 10px; margin-left: 10px; margin-bottom: 10px;">
                            <img src="~/Content/Images/Admin/post.jpg" height="100" width="100" class="img img-circle" />
                        </div>
                        <span style="font-family: Ambleregular; color: red">Normal Ads</span>&nbsp;<span class="badge">@ViewData["CountNormal"]</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-11" style="height: 150px; background-color: #F9F7F7; border-radius: 5px;">
                        <div style="margin-top: 10px; margin-left: 10px; margin-bottom: 10px;">
                            <img src="~/Content/Images/Admin/message.jpg" height="100" width="100" class="img img-circle" />
                        </div>
                        <span style="font-family: Ambleregular; color: red">Messages</span>&nbsp;<span class="badge">@ViewData["CountUser"]</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-11" style="height: 150px; background-color: #F9F7F7; border-radius: 5px;">
                        <div style="margin-top: 10px; margin-left: 10px; margin-bottom: 10px;">
                            <img src="~/Content/Images/Admin/featurepost.jpg" height="100" width="100" class="img img-circle" />
                        </div>
                        <span style="font-family: Ambleregular; color: red">Feature Ads</span>&nbsp;<span class="badge">@ViewData["CountFeature"]</span>
                    </div>
                </div>

            </div>
            <div class="col-md-12" style="height: auto; margin: 0px auto; padding: 0px;">
                <div class="pendingads" style="height: auto; padding: 0px 10px 10px 20px;">
                    <div class="pendingheading" style="height: 40px; background: #ddd; padding: 10px; margin-bottom: 20px;">
                        <span style="font-family: Tahoma; font-weight: bold;">Pending Feature Ads <span style="color:dodgerblue;font-size:small">(@ViewData["PendingAds"] pending Ads. needs to Activate)</span></span>
                    </div>
                    <div>
                        @foreach (var item in ViewData["PendingFeatures"] as IEnumerable<Shopping.Models.PostAd>)
                        {
                            <div class="eachdiv" style="height: 260px; width: 188px; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 10px; margin-right: 5px; float: left;">
                                
                                    <div class="imgdiv" style="height: 170px; width: 188px; margin-bottom: 10px; margin-right: 5px; float: left;">
                                        @{
                            if (item.Image1 != "../../Content/Images/img1/Anon1.jpg" && item.Image2 != "../../Content/Images/img2/Anon2.jpg" && item.Image3 != "../../Content/Images/img3/Anon3.jpg")
                            {
                                       <a href="/Home/RecentProductDetails/@item.Id"> <img src="@item.Image1"class="img-rounded"  height="170" alt="Photo Not Available" style="padding:5px; width:100%;" /></a>
                            }
                            else if (item.Image1 == "../../Content/Images/img1/Anon1.jpg" && item.Image2 != "../../Content/Images/img2/Anon2.jpg" && item.Image3 != "../../Content/Images/img3/Anon3.jpg")
                            {
                                          <a href="/Home/RecentProductDetails/@item.Id">  <img src="@item.Image2"class="img-rounded" width="100" height="170" alt="Photo Not Available" style="padding:5px;" /></a>
                            }
                            else if (item.Image1 == "../../Content/Images/img1/Anon1.jpg" && item.Image2 != "../../Content/Images/img2/Anon2.jpg" && item.Image3 == "../../Content/Images/img3/Anon3.jpg")
                            {
                                         <a href="/Home/RecentProductDetails/@item.Id">   <img src="@item.Image2"class="img-rounded" width="180" height="170" alt="Photo Not Available" style="padding:0 0 0 0px;" /></a>
                            }
                            else if (item.Image1 == "../../Content/Images/img1/Anon1.jpg" && item.Image2 == "../../Content/Images/img2/Anon2.jpg" && item.Image3 != "../../Content/Images/img3/Anon3.jpg")
                            {
                                           <a href="/Home/RecentProductDetails/@item.Id"> <img src="@item.Image3"class="img-rounded" width="180" height="170" alt="Photo Not Available" style="padding:0 0 0 0px;" /></a>
                            }
                            else
                            {
                                           <a href="/Home/RecentProductDetails/@item.Id"> <img src="@item.Image1"class="img-rounded" width="180" height="170" alt="Photo Not Available" style="padding:0 0 0 0px;" /></a>
                            }
                                        }
                                    </div>
                            
                                <div class="description" style="height: 40px; width: 180px; float: left;">
                                    <p style="font-family: Tahoma; font-size: 14px; margin-left: 5px;"> @item.Title
                                        <br />
                                        <span style="color: #ff6a00">Rs: @item.Price</span>
                                    </p>

                                </div>
                                <div class="buttons" style="height: 40px; width: 180px; float: left; margin-left: 7px;">
                                    <button id="btnDelete" value="@item.Id" style="width:80px;" class="btn btn-danger btn-sm" onclick="deleteProduct(this)" ><span class="glyphicon glyphicon-trash"></span> Delete</button>
                                    <a class="btn btn-info btn-sm" href="/Admin/FeatureTrue/@item.Id" style="width:80px;">Activate</a>                                   
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>



        </div>

    </div>
</div>
<script>
    function deleteProduct(btn) {
        bootbox.confirm("Would you really like to delete this record?", function (result) {
            if (result) {
                var id = $(btn).val();
                $.ajax({
                    url: '/Admin/DeleteFeatureAd',
                    data: { id: id },
                    type: 'POST',
                    dataType: 'JSON',
                    async: false,
                    success: function (data) {
                        if (data == true) {
                            $(btn).closest("div").parent("div").remove();
                        } else {
                            alert("Data could not be deleted.");
                        }
                    }
                });
            }
        });

    };
</script>
